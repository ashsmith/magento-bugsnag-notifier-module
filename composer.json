{
    "name": "ashsmith/magento-bugsnag-notifier-module",
    "description": "Bugsnag Notifier for Magento 2",
    "type": "magento2-module",
    "require": {
        "bugsnag/bugsnag": "^3.19",
        "magento/framework": "^101||^102",
        "magento/module-customer": "^101||^102",
        "magento/module-store": "^101"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "magento/magento-coding-standard": "^5.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Ash Smith",
            "email": "hello@ashsmith.io"
        }
    ],
    "autoload": {
        "files": [
            "src/registration.php"
        ],
        "psr-4": {
            "Ashsmith\\Bugsnag\\": "src"
        }
    },
    "repositories": {
        "0": {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    },
    "scripts": {
        "post-install-cmd": [
          "([ $COMPOSER_DEV_MODE -eq 0 ] || vendor/bin/phpcs --config-set installed_paths ../../magento/magento-coding-standard/)"
        ],
        "post-update-cmd": [
          "([ $COMPOSER_DEV_MODE -eq 0 ] || vendor/bin/phpcs --config-set installed_paths ../../magento/magento-coding-standard/)"
        ]
    }
}
